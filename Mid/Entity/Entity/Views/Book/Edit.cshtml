
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form action="/Book/Edit" method="post">

    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="BookName">

    <input type="hidden" name="Id" value="@Model.Id" />

    <input type="text" name="Author" value="@Model.Author" class="form-control" placeholder="Author">

    <input type="text" name="Publisher" value="@Model.Publisher" class="form-control" placeholder="Publisher">

    <input type="text" name="Price" value="@Model.Price" class="form-control" placeholder="Price">


    <br>
    <input type="submit" value="Edit" />

</form>

