@model List<Entity.Models.Database.Book>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>Price</th>
    </tr>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.Id</td>
            <td>@b.Name</td>
            <td>@b.Author</td>
            <td>@b.Publisher</td>
            <td>@b.Price</td>
            <td>
                <a href="/Book/Edit/@b.Id" class="btn btn-info">Update</a>
                <a href="/Book/Sure/@b.Id" class="btn btn-danger">Remove</a>
            </td>

        </tr>
    }
</table>

